<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_turquoise"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Greeting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Qistina"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/tq_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No active reminder"
            android:textSize="13sp"
            android:textColor="@color/tq_hint"
            android:layout_marginBottom="12dp"/>

        <!-- Top Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Home Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/tq_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Home Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/home"
                        android:tint="@color/tq_primary"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/tq_text"/>
                </LinearLayout>

                <!-- Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:useDefaultMargins="true">

                    <!-- Nearby -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="4dp"
                        android:onClick="openNearby">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/location"
                                android:tint="@color/tq_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nearby"
                                android:textStyle="bold"
                                android:textColor="@color/tq_text"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Find laundromats"
                                android:textSize="12sp"
                                android:textColor="@color/tq_hint"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Reminder -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="4dp"
                        android:onClick="openReminder">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/timer"
                                android:tint="@color/tq_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set Reminder"
                                android:textStyle="bold"
                                android:textColor="@color/tq_text"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set laundry timer"
                                android:textSize="12sp"
                                android:textColor="@color/tq_hint"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Upload Receipt -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="4dp"
                        android:onClick="openUploadReceipt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/upload"
                                android:tint="@color/tq_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Receipt"
                                android:textStyle="bold"
                                android:textColor="@color/tq_text"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scan laundry receipt"
                                android:textSize="12sp"
                                android:textColor="@color/tq_hint"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- My Records -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="4dp"
                        android:onClick="openMyProof">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/user"
                                android:tint="@color/tq_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Records"
                                android:textStyle="bold"
                                android:textColor="@color/tq_text"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View laundry proof"
                                android:textSize="12sp"
                                android:textColor="@color/tq_hint"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <!-- Log Out -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Log Out"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/tq_primary"
                    android:textColor="@android:color/white"
                    android:onClick="logout"/>

                <!-- View Developer -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Developer"
                    android:textColor="@color/tq_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:layout_gravity="center"
                    android:onClick="openDeveloper"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</ScrollView>


